# Reduce extraneous network calls
audit=false
fund=false

# Registry (explicit for clarity)
registry=https://registry.npmjs.org/

# Make network more resilient in CI
fetch-retries=6
fetch-retry-factor=10
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=180000

# Lower concurrency to avoid connection resets
network-concurrency=1

# Avoid engine failures and strictness in CI
engine-strict=false

